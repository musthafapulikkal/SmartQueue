<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/imageview_newhos"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="fitXY" />
    <TextView
        android:textAllCaps="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_newhos_name"
        android:layout_width="150dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="16dp"
        android:layout_toEndOf="@+id/imageview_newhos"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageview_newhos" />
    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:layout_marginLeft="8dp"
        android:background="@color/green"
        android:id="@+id/btn_approve"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/txt_newhos_name"
        android:text="Approve"
        android:layout_toRightOf="@+id/txt_newhos_name" />
    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_approve"
        android:layout_toEndOf="@+id/txt_newhos_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:text="Remove"
        android:id="@+id/btn_remove"
        android:layout_toRightOf="@+id/txt_newhos_name" />

</RelativeLayout>