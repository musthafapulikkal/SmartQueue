<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Activity.UserHomeActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:scaleType="fitXY"
    android:id="@+id/img_user_home"
    android:src="@drawable/smartqueue3"/>
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="150dp"
        android:layout_below="@+id/img_user_home"
        android:layout_marginTop="20dp"
        android:layout_height="150dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/id1"
            android:src="@drawable/doctoricon"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_below="@+id/id1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="doctors"
            android:id="@+id/id_u_home_doc"
            android:background="#0000ff"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:layout_height="40dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_below="@+id/img_user_home"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_height="150dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/id2"
            android:src="@drawable/notification"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_below="@+id/id2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Notifications"
            android:id="@+id/user_h_not"
            android:background="#0000ff"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:layout_height="40dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_below="@+id/r1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="150dp"
       >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/idimg3"
            android:src="@drawable/logouticon"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_below="@+id/idimg3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Logout"
            android:id="@+id/user_h_logout"
            android:background="#0000ff"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:layout_height="40dp"
            />
    </RelativeLayout>
</RelativeLayout>