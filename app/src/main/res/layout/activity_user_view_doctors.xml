<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Activity.UserViewDoctorsActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your area"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <LinearLayout
        android:id="@+id/user_linear"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/spinner_layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Spinner">
        <Spinner
            android:id="@+id/id_spinner_state_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

        </Spinner>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Spinner">
            <Spinner
                android:id="@+id/id_spinner_dist_user"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

            </Spinner>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Spinner">
            <Spinner
                android:id="@+id/id_spinner_city_user"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

            </Spinner>
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/user_linear"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Search"
        android:id="@+id/id_user_btn_search"
        android:background="#0000ff"
        android:textColor="@color/white"
        />
</RelativeLayout>