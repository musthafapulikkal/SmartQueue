<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IndexActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an action"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/txt_chooseanaction"
        android:textSize="20dp"
        android:textColor="@color/red"
        android:textStyle="bold"/>
   <Button
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:text="doctor"
       android:layout_centerHorizontal="true"
       android:background="@color/orange"
       android:textColor="@color/white"
       android:id="@+id/index_doctors"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/index_doctors"
        android:layout_marginTop="10dp"
        android:text="Patients"
        android:layout_centerHorizontal="true"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:id="@+id/index_patient"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/index_doctors"
        android:layout_marginBottom="10dp"
        android:text="Admin"
        android:layout_centerHorizontal="true"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:id="@+id/index_admin"/>

</RelativeLayout>