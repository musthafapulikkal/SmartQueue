<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".Activity.UserViewSingleDoctorActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:id="@+id/img_book_seat"
        android:src="@drawable/smartqueue3"/>
    <Button
        android:layout_below="@+id/img_book_seat"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Seat"
        android:id="@+id/user_single_btn_viewseat"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_single_btn_viewseat"
        android:layout_marginTop="20dp"
        android:text="View queue"
        android:id="@+id/user_single_btn_view_q"/>

</RelativeLayout>